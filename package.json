{
  "name": "handy-typescript",
  "version": "1.0.1",
  "description": "a collection of tools I use in typescript",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "jest --clearCache",
    "test": "jest",
    "predoc": "echo 'preparing documentation' && npm link typedoc",
    "doc": "typedoc",
    "postdoc": "git add -A docs",
    "prelint-staged": "echo 'preparing documentation' && npm link lint-staged",
    "lint-staged": "lint-staged"
  },
  "keywords": [
    "typescript"
  ],
  "author": "Robert Collins <roberto.tomas.cuentas@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-transformer-keys": "^0.4.3",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typedoc": "^0.20.36",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -s doc lint-staged"
    }
  }
}